{
  "name": "nest-playground",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "docker compose -f docker-compose.dev.yaml up -d --build && env-cmd -f ./.env/.env.dev nest start --watch",
    "start:nest": "env-cmd -f ./.env/.env.dev nest start --watch",
    "start:prod": "docker compose -f docker-compose.prod.yaml up --build",
    "start:ci": "docker compose -f docker-compose.ci.yaml up --build",
    "down": "docker compose -f docker-compose.dev.yaml down; docker compose -f docker-compose.prod.yaml down; docker compose -f docker-compose.ci.yaml;",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "type": "tsc --noEmit",
    "test": "env-cmd -f ./.env/.env.dev jest",
    "test:watch": "env-cmd -f ./.env/.env.dev jest --watch",
    "test:cov": "env-cmd -f ./.env/.env.dev jest --coverage",
    "test:debug": "env-cmd -f ./.env/.env.dev node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "env-cmd -f ./.env/.env.dev jest --config ./test/jest-e2e.json",
    "migrate:dev": "env-cmd -f ./.env/.env.dev prisma migrate dev --preview-feature",
    "studio": "env-cmd -f ./.env/.env.dev prisma studio"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.1.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "env-cmd": "^10.1.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "prisma": "^5.1.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
